<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLength"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintGuide_percent="0.12"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sideLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineLength"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLength"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/apItemLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_layout"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLength"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_ssid"
                        android:layout_width="0px"
                        android:layout_height="50dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp"
                        android:text="Loading.."
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat" />

                    <ImageView
                        android:id="@+id/img_color"
                        android:layout_width="0px"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/red" />

                    <ImageView
                        android:id="@+id/img_rssiDegree"
                        android:layout_width="0px"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/wifi_3" />

                    <ImageButton
                        android:id="@+id/imgb_connect"
                        android:layout_width="0px"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_star_big_off" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layerType="software"
                    android:src="@drawable/drawable_dash_line"
                    android:contentDescription="TODO" />

                <LinearLayout
                    android:id="@+id/scoreLayout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/border_layout"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/detailCapsLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_layout"
                        android:orientation="vertical"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/tv_cap1"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:text="CAP1 : " />

                        <TextView
                            android:id="@+id/tv_cap2"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:text="CAP2 : " />

                        <TextView
                            android:id="@+id/tv_cap3"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:text="CAP3 : " />

                        <TextView
                            android:id="@+id/tv_cap4"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:text="CAP4 : " />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/secureLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_sec_score"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="sec_text_01" />
                        <TextView
                            android:id="@+id/img_sec_score"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="신호등 이미지" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/speedLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_speed_score"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="speed_text_02" />

                        <ImageButton
                            android:id="@+id/imgb_detail"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            app:srcCompat="@android:drawable/ic_menu_add" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/dash_detail"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layerType="software"
                    android:src="@drawable/drawable_dash_line"
                    android:contentDescription="TODO" />

                <LinearLayout
                    android:id="@+id/detailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_layout"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_detail_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp"
                        android:text="상세 설명" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>